               </VBox.margin>
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Label text="Телефон" textFill="#0d0d0d">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="96.0" prefHeight="91.0" prefWidth="170.0">
         <children>
            <TextField fx:id="txtName">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtPhoneNumber">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
