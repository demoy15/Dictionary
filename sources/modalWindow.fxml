         <children>
            <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" onAction="#agree" prefHeight="25.0" prefWidth="65.0" text="ОК">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelButton" prefHeight="25.0" prefWidth="66.0" text="Отмена">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
